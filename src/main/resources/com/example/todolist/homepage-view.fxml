<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400"
            prefWidth="600"
            fx:controller="com.example.todolist.HomePageController">

    <!-- Side Tab -->
    <left>
        <VBox spacing="10" alignment="CENTER" prefWidth="200" style="-fx-border-color: black; -fx-border-width: 1px; -fx-border-style: solid;">
            <VBox spacing="10" prefHeight="50" prefWidth="200" style="-fx-border-color: black; -fx-border-width: 1px; -fx-border-style: solid;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label fx:id="currentUserUName"/>
                <Label fx:id="currentUserEmail"/>
            </VBox>
            <VBox spacing="10" prefWidth="200" alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 1px; -fx-border-style: solid;"
            VBox.vgrow="ALWAYS">
                <Button fx:id="editProfileButton" text="Edit Profile" onAction="#handleEditProfile"/>
                <Button fx:id="logoutButton" text="Log Out" onAction="#handleLogout"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="taskCardTitleField" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <Label text="Content:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="taskCardContentField" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

            <Button fx:id="createTaskButton" text="Create Task" onAction="#createTask"  GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <Button fx:id="displayTasksButton" text="Display Tasks" onAction="#displayUserTasks"  GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        </GridPane>
    </center>

    <right>
        <ScrollPane vbarPolicy="ALWAYS" prefWidth="200" prefHeight="200">
            <!-- Content to be scrolled -->
            <VBox fx:id="tasksContainer" VBox.vgrow="ALWAYS">

            </VBox>
        </ScrollPane>
    </right>

</BorderPane>

