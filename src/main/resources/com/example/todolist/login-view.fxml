<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.todolist.LogInController"
      style="-fx-background-color: #f0f0f0;">
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label style="-fx-font-size: 20px;" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="loginUsernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label style="-fx-font-size: 20px;" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="loginPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="26.0" prefWidth="90.0" style="-fx-font-size: 12px;" text="Login" />
        <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="26.0" prefWidth="90.0" style="-fx-font-size: 12px;" text="Register" />
    </HBox>
</VBox>
